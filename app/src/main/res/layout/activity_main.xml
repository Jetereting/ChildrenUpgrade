<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:id="@+id/layout"
    tools:context="us.eiyou.childrenupgrade.MainActivity">

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_widthPercent="32%"
        android:background="@null"
        app:layout_marginLeftPercent="40%"
        android:textColor="#ffffff"
        app:layout_marginTopPercent="34.6%"/>

    <EditText
        android:id="@+id/et_password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@null"
        app:layout_widthPercent="32%"
        android:textColor="#ffffff"
        app:layout_marginLeftPercent="40%"
        app:layout_marginTopPercent="40.1%"/>

    <Button
        android:id="@+id/b_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@null"
        app:layout_widthPercent="14%"
        app:layout_marginLeftPercent="61%"
        app:layout_marginTopPercent="45%"/>
</com.zhy.android.percent.support.PercentRelativeLayout>
