<?xml version="1.0" encoding="utf-8"?>

<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout"
    android:background="@drawable/my"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="us.eiyou.childrenupgrade.MyMainActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="16%h"/>
    <ImageView
        android:id="@+id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="16%"
        app:layout_marginLeftPercent="10%"
        app:layout_marginTopPercent="12%"
        app:layout_widthPercent="16%h"
        android:src="@drawable/avatar1"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="黄海山"
        android:textColor="#ffffff"
        android:textSize="22sp"
        app:layout_marginLeftPercent="39%"
        app:layout_marginTopPercent="14%"/>
    <TextView
        android:id="@+id/lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/corner"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="lv3"
        android:textColor="#3f3fb9"
        android:textSize="15sp"
        app:layout_marginLeftPercent="57%"
        app:layout_marginTopPercent="14.5%"/>
    <TextView
        android:id="@+id/fraction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        app:layout_marginLeftPercent="67%"
        app:layout_marginTopPercent="14.9%"
        android:textStyle="italic"
        android:text="总分：54"/>
    <TextView
        android:id="@+id/lave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        app:layout_marginLeftPercent="40%"
        app:layout_marginTopPercent="19%"
        android:text="还差32%就要升级了，加油！"/>
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginLeftPercent="36%"
        app:layout_marginTopPercent="23.2%"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        app:layout_widthPercent="60%"
        app:layout_heightPercent="4%"
        android:max="@integer/upgrade_fraction"
        android:progress="54"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="4%"
        app:layout_marginLeftPercent="93.6%"
        app:layout_marginTopPercent="22.59%"
        android:src="@drawable/flag"/>
    <!--<com.daimajia.numberprogressbar.NumberProgressBar-->
        <!--android:id="@+id/progress"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:layout_marginLeftPercent="36%"-->
        <!--app:layout_marginTopPercent="23.2%"-->
        <!--app:layout_widthPercent="62%"-->
        <!--app:layout_heightPercent="4%"-->
        <!--android:max="100"-->
        <!--android:progress="80"/>-->
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        app:layout_heightPercent="18%"
        app:layout_marginLeftPercent="16%"
        app:layout_marginTopPercent="38%"
        app:layout_widthPercent="74%">
        <TextView
            android:id="@+id/promise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="9dp"
            android:textColor="#1b7600"
            android:text="的说法撒大法师答复阿斯顿发撒发生"/>
    </ScrollView>
    <EditText
        android:id="@+id/promise_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="4%"
        android:background="@null"
        android:singleLine="true"
        android:imeOptions="actionSend"
        app:layout_marginLeftPercent="23%"
        app:layout_marginTopPercent="55.3%"
        app:layout_widthPercent="59%"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        app:layout_heightPercent="18%"
        app:layout_marginLeftPercent="16%"
        app:layout_marginTopPercent="70%"
        app:layout_widthPercent="74%">
        <TextView
            android:id="@+id/praise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="9dp"
            android:textColor="#1b7600"
            android:text="的说法撒大法师答复阿斯顿发撒发生"/>
    </ScrollView>
    <EditText
        android:id="@+id/praise_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="4%"
        android:background="@null"
        android:singleLine="true"
        app:layout_marginLeftPercent="23%"
        android:imeOptions="actionSend"
        app:layout_marginTopPercent="87%"
        app:layout_widthPercent="59%"/>

</com.zhy.android.percent.support.PercentRelativeLayout>
